{
	"compilerOptions": {
		"target": "ES2020",
		"module": "nodenext",
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "nodenext",
		"baseUrl": "src",
		"emitDeclarationOnly": true,
		"noImplicitAny": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
